package threadChangeActionOrFinishTread;

public class MainTread {
	public static int valueToPrint = 0;
	public static SomeActionIncrementOrDecrement foFirst;
	
	public static void main(String[] args){
		foFirst = new SomeActionIncrementOrDecrement();
		Thread first = new Thread(foFirst); 
		System.out.print("Значення :: ");
		first.start();
		for(int i  = 0; i < 5; i++){
			foFirst.changeAction(); 
		}
		foFirst.finish();
		
	}

}
