package threadFightBetweenChickenAndEggs;

public class FightMain {
	static EggsSay egg;

	public static void main(String[] args) throws InterruptedException{
		
		Thread chicken = new Thread(new ChickenSay()); //Implement
		egg = new EggsSay(); //!! Extend
		
		chicken.start();
		egg.start();
		
		for(int i = 0 ; i < 10 ; i++){
			Counter.currentSleep();
			System.out.println("Ïîòî÷íèé øíäåêñ ë³÷èëüíèêà ::  " + Counter.getÑurrentI());
		}
		
		
		 if(chicken.isAlive() && !egg.isAlive()){
			 chicken.join(); 
			 	System.out.println("Ïåðøèì áóëà êóðêà ::" + Counter.getÑurrentI());
			}else if(egg.isAlive() && !chicken.isAlive() ){ 
				egg.join(); 
				System.out.println("Ïåðøèì áóëî ÿéöå ::" + Counter.getÑurrentI());}
			else {
			 egg.join(); 
			 chicken.join();  
			 	System.out.println("Îáà íå ïðàâ³::" + Counter.getÑurrentI());}
		 
		 while(chicken.isAlive() && egg.isAlive()){ System.out.println(Counter.forCuntering++);}
		
		 System.out.println("Êîíôë³êò çàâåðøèíî::" + Counter.getÑurrentI());
		
	}
	
	
}
