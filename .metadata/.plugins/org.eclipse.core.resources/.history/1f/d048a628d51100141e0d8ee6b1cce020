package threadFightBetweenChickenAndEggs;

public class Counter extends Thread  {
	private static int i = 0;
	private static int sleepTime = 100;
	
	public static int getI() {
		return i++;
	}
	public static int getÑurrentI() {
		return i;
	}
	
	public static void cleanCounter() {
		i =0;
	}
	public static void setCounter(int idex) {
		//Counter.i = i; or
		i = idex;
	}
	public static void currentSleep(int time) {
		if(time > 0){sleepTime = time;}
		try {
			sleep(sleepTime);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
